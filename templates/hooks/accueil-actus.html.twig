{% for content in contents|sort((a, b) => b.createdAt|date("d/m/Y h m s") <=> a.createdAt|date("d/m/Y h m s"))|slice(0, 3) %}
	<div class="card mb-3 shadow">
		<div class="row g-0">
			<div class="col-lg-4">
				<img src="{{ ('/uploads/pictures/' ~ content.image)}}" class="card-img-top w-100 d-block fit-cover" style="height:200px;" alt="{{ content.title }}">
			</div>
			<div class="col-lg-7">
				<div class="card-body">
					{% if loop.index == 1 %}
						<a class="text-decoration-none" href="{{ path('app_news') }}?page=1">
						{% endif %}
						{% if loop.index == 2 %}
							<a class="text-decoration-none" href="{{ path('app_news') }}?page=2">
							{% endif %}
							{% if loop.index == 3 %}
								<a class="text-decoration-none" href="{{ path('app_news') }}?page=3">
								{% endif %}
								<h3 class="text-primary card-title">{{ content.title }}</h3>
								<p class="text-primary card-subtitle">{{ content.createdAt|date("d/m/Y") }}</p>
								<p class="text-primary card-text">{{ content.summary|raw }}
								</p>
							</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
